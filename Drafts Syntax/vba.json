{
  "name": "VBA",
  "description": "VBA for Office Applications",
  "sampleText": "'VBA Syntax\nConst n = 100\nLet s = Dim value\n\nif (n < 1000) {\n\tconsoleÅ‚ii.log(\"hello\");\n}",
  "author"   : "Grincess",
  "scopeName": "text.vba",
  "rangeExtensionType":{
    "default":"lookAround1000"},
  "listCompletionDefinitions": [],
  "navigationPatterns": [],
  "fileExtensions": [
    "cls",
    "frm",
    "bas",
    "vb"],
  "patterns": [{
    "match": "\\b\\'.*$",
    "exclusive": true,
    "comment": "Line comment",
    "captures":{
      "0": {"scope": "code.comment"}}
  },{
    "match": "(\")(?:(?!(?:\\\\|\\1)).|\\\\.)*\\1",
    "exclusive": true,
    "comment": "String literal",
    "captures": {
      "0": {"scope": "code.literal"}}
  },{
    "match": "\\b(Empty|Null|True|False|Nothing)\\b",
    "exclusive": true,
    "comment": "Value type literal",
    "captures":{
      "0":{"scope": "code.literal"}}
  },{
    "match": "\\b-?(?:0x[\\da-f]+|\\d*\\.?\\d+(?:e[+-]?\\d+)?)\\b",
    "exclusive": true,
    "comment": "Number",
    "captures": {
      "0": {"scope": "code.literal"}}
  },{
    "match": "--|\\+\\+|([!=]?=|[<>])=?|&&?|\\|\\|?|[-+/*]",
    "exclusive": true,
    "comment": "Operator",
    "captures": {
      "0": { "scope": "code.operator"}}
  },{
    "match": "([{}\\[\\];(),.:])",
    "exclusive": true,
    "comment": "Punctuation",
    "captures": {
      "0": { "scope": "code.punctuation"}}
  },{
    "match": "\\b(A(?:nd|s)|C(?:a(?:se|tch)|lass|onst)|Or|Xor|While|Mod|Return|If|E(?:ach|x(?:it|tends)|lse(?:If)?)|New|D(?:e(?:lete|fault)|im|o)|T(?:ry|h(?:row|en)|ype)|F(?:or|inally|unction)|Sub|[LS]et|Static|P(?:ublic|rivate|ow))(?!\\w|=\")",
    "exclusive": true,
    "comment": "VBA keyword",
    "captures": {
      "0": {"scope": "code.keyword"}}
  },{
    "match": "\\b(RegExp|Variant|Integer|Boolean|String|Double|Decimal|Long(?:Long)?|Byte|Date|DateTime|Range|Style|Application|)\\b",
    "exclusive": true,
    "comment": "VBA Class",
    "captures": {
      "0": {"scope": "code.class"}}
  }]
}