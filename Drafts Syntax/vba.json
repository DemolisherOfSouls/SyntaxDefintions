{
  "name": "VBA",
  "description": "VBA for Office Applications",
  "sampleText": "'VBA Syntax\nConst n = 100: s = Dim value\n\nif (n < 1000) {\n\tconsole.log(\"hello\");\n}",
  "author"   : "Grincess",
  "scopeName": "text.vba",
  "rangeExtensionType": {"default": "lookAround1000"},
  "listCompletionDefinitions": [],
  "fileExtensions": [ "cls", "frm", "bas" ],
  "patterns": [{
      "match": "('\\N*$)",
      "exclusive": true,
      "comment": "Line comment",
      "captures": {
        "0": {"scope": "code.comment"}}
    },{
      "match": "\"(?:(?!(?:\\\\|\")).|\\\\.)*\"",
      "exclusive": true,
      "comment": "String literal",
      "captures": {
        "0": {"scope": "code.literal"}}
    },{
      "match": "\\b(Empty|Null|True|False|Nothing)\\b",
      "exclusive": true,
      "comment": "Value type literal",
      "captures": {
        "0": { "scope": "code.literal"}}
    },{
      "match": "\\b-?(?:0x[\\da-f]+|\\d*\\.?\\d+(?:e[+-]?\\d+)?)\\b",
      "exclusive": true,
      "comment": "Number",
      "captures": {
        "0": { "scope": "code.literal"}}
    },{
      "match": "(?x) ( --? | !=?=? | <=? | >=? | ==?=? | &&? | \\|{1,2} | \\+{1,2} | [*?\\/~^%] )",
      "exclusive": true,
      "comment": "Operator",
      "captures": {
        "0": { "scope": "code.operator"}}
    },{
      "match": "([{}\\[\\];(),.:])",
      "exclusive": true,
      "comment": "Punctuation",
      "captures": {
        "0": { "scope": "code.punctuation"}}
    },{
      "match": "\\b(And|Or|Xor|Do|While|For|Each|As|Return|Dim|Exit|If|Then|Else|ElseIf|New|Delete|try|Throw|Catch|Finally|Class|Function|Const|Let|Static|Public|Private|Set|Extends)(?![\\w\"])",
      "exclusive": true,
      "comment": "VB keyword",
      "captures": {
        "0": {"scope": "code.keyword"}}
    }],
  "navigationPatterns": [{
    "match": "(\\w)\\s+function (.*)",
    "comment": "Function",
    "rangeCapture": "0",
    "labelCapture": "2",
    "prefix": "function",
    "level": 0
  }]
}