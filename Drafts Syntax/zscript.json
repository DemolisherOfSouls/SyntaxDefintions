{
  "name": "ZDoom ZScript",
  "description": "ZScript & DECORATE for ZDoom",
  "sampleText": "// ZScript Syntax\nclass Actor {\nlet s = \"string value\";\n\nif (n < 1000) {\n\nprint(\"s:hello\");\n}",
  "author": "Grincess",
  "scopeName": "zdoom.zscript",
  "navigationPatterns": [],
  "rangeExtensionType": {
    "default": "lookAround1000"
  },
  "fileExtensions": [
    "zs",
    "decorate"
  ],
  "patterns": [
    {
      "match": "(\\/\\*[\\S\\s]*?\\*\\/)|(\\/\\/.*)",
      "exclusive": true,
      "comment": "Block comment",
      "captures": {
        "0": {"scope": "code.comment"}}
    },{
      "match": "",
      "exclusive": true,
      "comment": "Inline comment",
      "captures": {
        "1": {"scope": "code.comment"}}
    },{
      "match": "(['\"])(?:(?!(?:\\\\|\\1)). |\\\\.) *\\1",
      "exclusive": true,
      "comment": "String literal",
      "captures": {
        "0": {
          "scope": "code.literal"}}
    },{
      "match": "([\\/])(?:(?!(?:\\\\|\\1)). |\\\\.)*\\1([gmi]*)",
      "exclusive": true,
      "comment": "Regex literal",
      "captures": {
        "0": {
          "scope": "code.literal"
      }}
    },{
      "match": "\\b(true|false)\\b",
      "exclusive": true,
      "comment": "Defined Constant",
      "captures": {
        "0": {
          "scope": "code.literal"}}
    },{
      "match": "\\b-?(?:0x[\\da-f]+|\\d*\\.? \\d+(?:e[+-]? \\d+)?) \\b",
      "exclusive": true,
      "comment": "Number",
      "captures": {
        "0": {
          "scope": "code.literal"
        }
      }
    },{
      "match": "([-+!=<>&|~^%?*\\\/\\\\])",
      "exclusive": true,
      "comment": "Operator",
      "captures": {
        "0": {"scope": "code.operator"}}
    },{
      "match": "([{}\\[\\];(),.:])",
      "exclusive": true,
      "comment": "Punctuation",
      "captures": {
        "0": { "scope": "code.punctuation"}}
    },{
      "match": "\\b(class|mixin|function)\\b",
      "exclusive": true,
      "comment": "ZScript keyword",
      "captures": {
        "0":{"scope":"code.keyword"}}
    }]
}
