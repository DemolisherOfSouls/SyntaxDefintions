{
  "author":"Grincess",
  "scopeName":"text.json.draftssyntax",
  "sampleText":"{\n\t\”name\”:\”Drafts Syntax\”,\n\t\”description\”:\”desc\”\n}",
  "rangeExtensionType":{"default":"lookAround1000"},
  "listCompletionDefinitions":[],
  "fileExtensions":["draftssyntax"],
  "description":"Syntax Definition for Drafts code editor.",
  "patterns":[{

    "match": "(\")(match)(\")\\s*?(\\:)\\s*?(\")(.+?)(\")",
    "exclusive": true,
    "comment": "Regex literal",
    "captures": {
      "2": {"scope": "code.keyword"},
      "6": {"scope": "code.literal"}}
  },{

    "match": "\\b(true|false|null)\\b",
    "exclusive": true,
    "comment": "Defined Constant",
    "captures": {
      "0": {
        "scope": "code.keyword"}}
  },{

    "match": "\\b-?(?:0x[\\da-f]+|\\d*\\.?\\d+(?:e[+-]?\\d+)?)\\b",
    "exclusive": true,
    "comment": "Number",
    "captures": {
      "0": {
        "scope": "code.literal"}}
  },{

    "match":"([\\s\\[{]+)(\")(name|author)(\")([ \\t]+?)(\\:)([ \\t]+?)(\")(.+?)(\")",
    "exclusive": true,
    "comment": "Global Property",
    "captures": {
      "0": {"scope":"code.keyword"},
      "2": {"scope":"color.blue"},
      "4": {"scope":"color.blue"},
      "6": {"scope":"color.red"},
      "8": {"scope":"color.blue"},
      "10":{"scope":"color.blue"}}
  },{

    "match": "([{}\\[\\];(),.:])",
    "exclusive": false,
    "comment": "Punctuation",
    "captures": {
      "1":{"scope":"code.punctuation"}}
  },{

    "match": "(\")(match|exclusive|comment|captures|rangeCapture|labelCapture|level|enabled|sequencePadding)(?!\\w|=\")",
    "exclusive": false,
    "comment": "Pattern Property",
    "captures": {
      "1":{"scope":"code.keyword"}}
  },{

    "match": "(\")(prefix|indent|line|sequence)(\")\\s*(\\:)\\s*(?:\")",
    "exclusive": false,
    "comment": "Capture Property",
    "captures": {
      "1":{"scope":"code.keyword"}}
  }],

  "name":"DraftsSyntax (JSON)"
}