{
  "author":"Grincess",
  "scopeName":"text.json.draftssyntax",
  "sampleText":"{\n\t\"name\":\"Drafts Syntax\",\n\t\"description\":\"desc\"\n}",
  "rangeExtensionType":{"default":"lookAround1000"},
  "listCompletionDefinitions":[],
  "fileExtensions":["draftssyntax"],
  "description":"Syntax Definition for Drafts code editor.",
  "patterns":[{

    "match": "(\")(match)(\")\\s*?(\\:)\\s*?(\")(.+?)(\")",
    "exclusive": true,
    "comment": "Regex literal",
    "captures": {
      "2": {"scope": "code.keyword"},
      "6": {"scope": "code.literal"}}
  },{

    "match": "\\b(true|false|null)\\b",
    "exclusive": true,
    "comment": "Defined Constant",
    "captures": {
      "0": {
        "scope": "code.keyword"}}
  },{

    "match": "\\b-?(?:0x[\\da-f]+|\\d*\\.?\\d+(?:e[+-]?\\d+)?)\\b",
    "exclusive": true,
    "comment": "Number",
    "captures": {
      "0": {
        "scope": "code.literal"}}
  },{

    "match":"^\\s*\"(scopeName|author|sampleText|rangeExtensionType|listCompletionDefinitions|fileExtensions|description|patterns|exclusive|comment|match|name)\"\\s*:\\s*\"(\\N+)\"",
    "exclusive": true,
    "comment": "Global Property",
    "captures": {
      "1": {"scope":"code.property"},
      "2": {"scope":"code.method"}}
  },{

    "match": "([{}\\[\\];(),.:])",
    "exclusive": false,
    "comment": "Punctuation",
    "captures": {
      "1":{"scope":"code.punctuation"}}
  },{

    "match": "\"(?:(?:lookAround(?:20|10|5)00)|default|scope)\"",
    "exclusive": false,
    "comment": "Pattern Property",
    "captures": {
      "1":{"scope":"code.keyword"}}
  },{

    "match": "(\")(prefix|indent|line|sequence)(\")\\s*(\\:)\\s*(?:\")",
    "exclusive": false,
    "comment": "Capture Property",
    "captures": {
      "1":{"scope":"code.keyword"}}
  }],

  "name":"DraftsSyntax (JSON)"
}